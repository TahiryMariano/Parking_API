generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parking_Slot {
  id                           Int                        @id @default(autoincrement())
  slot_number                  Int
  is_reserved_regular_customer Boolean                    @default(false)
  parking_slot_reservations    Parking_Slot_Reservation[]
}

model Parking_Slot_Reservation {
  id                 Int          @id @default(autoincrement())
  start_time         DateTime     @default(now())
  duration_in_minute Int
  booking_date       DateTime
  parking_slot       Parking_Slot @relation(fields: [parking_slotId], references: [id])
  parking_slotId     Int
  customer           Customer     @relation(fields: [customerId], references: [id])
  customerId         Int
}

model Customer {
  id                        Int                        @id @default(autoincrement())
  vehicle_number            String                     @unique
  contact_number            Int
  is_regular_customer       Boolean                    @default(false)
  parking_slot_reservations Parking_Slot_Reservation[]
  regular_passes            Regular_Pass[]
}

model Regular_Pass {
  id              Int      @id @default(autoincrement())
  purchase_date   DateTime
  start_date      DateTime
  duration_in_day Int
  customer        Customer @relation(fields: [customerId], references: [id])
  customerId      Int
}
